{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "types": ["mocha", "node", "react-native"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "allowJs": true,
    "jsx": "react"
  },
  "exclude": ["dist"],
  "include": ["src", "test", "node_modules/react-native"]
}
